{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": false,
        "allowJs": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "moduleResolution": "node"
    },
    "exclude": [
        "config/*",
        "node_modules",
        "dist"
    ]
}